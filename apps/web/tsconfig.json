{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": [
    "../../tsconfig.json",
    "@tsconfig/next/tsconfig.json"
  ],
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@cloudflare/workers-types"
    ],
    "plugins": [
      { "name": "next" }
    ]
  },
  "include": [
    ".next/types/**/*.ts",
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx",
    "**/*.ts",
    "**/*.tsx"
  ]
}
