{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": [
    "../../tsconfig.json",
    "@tsconfig/next/tsconfig.json"
  ],
  "compilerOptions": {
    "plugins": [
      { "name": "next" }
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@cloudflare/workers-types"
    ]
  },
  "include": [
    ".next/types/**/*.ts",
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx",
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "sqlite-wasm.d.ts",
    "svgr.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
